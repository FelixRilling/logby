{
    "name": "logby",
    "version": "3.0.0",
    "description": "A minimal TypeScript logger inspired by logback",
    "main": "./dist/logby.common.js",
    "module": "./dist/logby.esm.js",
    "types": "./dist/types/main.d.ts",
    "settings": {
        "namespace": {
            "module": "logby",
            "file": "logby"
        },
        "external": [
            "lightdash",
            "lodash"
        ],
        "browser": {
            "enabled": true,
            "globals": {
                "lodash": "_",
                "lightdash": "l_"
            }
        }
    },
    "scripts": {
        "start": "npm-run-all lint build test docs",
        "build": "rollup -c ./tasks/rollup.config.js",
        "build:test": "rollup -c ./tasks/rollup.config.test.js",
        "watch": "rollup -c ./tasks/rollup.config.js --watch",
        "dist": "npm-run-all build test docs",
        "lint": "npm-run-all --parallel lint:ts",
        "lint:ts": "tslint ./src/**/*.ts ./spec/**/*.ts",
        "fix": "npm-run-all fix:ts fix:prettier",
        "fix:ts": "tslint ./src/**/*.ts ./spec/**/*.ts --fix",
        "fix:prettier": "prettier ./src/**/*.ts ./spec/**/*.ts --write",
        "test": "npm-run-all build:test test:jasmine",
        "test:jasmine": "jasmine",
        "docs": "jsdoc -c jsdoc.json"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/FelixRilling/logby.git"
    },
    "keywords": [
        "logger",
        "logging"
    ],
    "author": "Felix Rilling",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/FelixRilling/logby/issues"
    },
    "homepage": "https://github.com/FelixRilling/logby#readme",
    "dependencies": {
        "@types/lodash": "^4.14.136",
        "lightdash": "^11.0.0",
        "lodash": "^4.17.15"
    },
    "devDependencies": {
        "@types/jasmine": "^3.3.16",
        "docdash": "^1.1.1",
        "jasmine": "^3.4.0",
        "jsdoc": "^3.6.3",
        "npm-run-all": "^4.1.5",
        "prettier": "^1.18.2",
        "rollup": "^1.18.0",
        "rollup-plugin-node-resolve": "^5.2.0",
        "rollup-plugin-typescript2": "^0.22.1",
        "tslint": "^5.18.0",
        "typescript": "^3.5.3"
    }
}
